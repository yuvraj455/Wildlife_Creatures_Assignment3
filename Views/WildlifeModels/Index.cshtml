@model IEnumerable<WildlifeCreatures_Assignment3.Models.WildlifeModel>

@{
    // Set the title of the page
    ViewData["Title"] = "Index";
}

<style>
    body {
        color: white; /* Set text color to white */
    }

    /* Layout for card container */
    .card-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
        margin-top: 20px;
    }

    /* Styling for individual cards */
    .card {
        width: 300px;
        background-color: black;
        border-radius: 8px;
        box-shadow: 0 4px 8px 2px darkgoldenrod; /* Add shadow */
        margin-bottom: 20px;
        overflow: hidden;
        transition: transform 0.3s ease-in-out; /* Apply transition to the transform property */
    }

        /* Scale down the card on hover */
        .card:hover {
            transform: scale(0.9);
        }

        /* Styling for images within cards */
        .card img {
            max-width: 100%; /* Ensure the image does not exceed the container width */
            max-height: 100%; /* Ensure the image does not exceed the container height */
            width: 700px; /* Set the desired width */
            height: 200px; /* Set the desired height */
            object-fit: contain; /* Maintain aspect ratio and fit within the specified dimensions */
        }

    /* Styling for card body */
    .card-body {
        padding: 20px;
    }

        /* Styling for card titles */
        .card-body h3 {
            color: white;
            margin-top: 0;
        }

        /* Styling for card text */
        .card-body p {
            color: white;
        }

    /* Styling for card actions */
    .card-actions {
        margin-top: 20px;
    }

        /* Styling for action buttons */
        .card-actions button {
            color: black;
            background-color: grey;
            border: none;
            cursor: pointer;
        }

            /* Styling for action button links */
            .card-actions button a {
                color: #fff;
                text-decoration: none;
                margin-right: 10px;
            }

                /* Styling for action button links on hover */
                .card-actions button a:hover {
                    color: #99ccff;
                }
</style>

<body>
    <h1>Index</h1>

    <p>
        <!-- Link to create a new wildlife creature -->
        <a asp-action="Create">Create New</a>
    </p>

    <!-- Container for cards -->
    <div class="card-container">
        <!-- Loop through each wildlife creature in the model -->
        @foreach (var item in Model)
        {
            <div class="card">
                <!-- Display image of the wildlife creature -->
                <img src="@item.PhotoUrl" alt="Creature Photo" />
                <!-- Display details of the wildlife creature -->
                <div class="card-body">
                    <h3>@item.Name</h3>
                    <p>ID: @item.Id</p>
                    <p>Weight: @item.Weight (Kgs)</p>
                    <p>Habitat: @item.Habitat</p>
                    <p>Current Population: @item.CurrentPopulation</p>
                    <!-- Actions for the creature (Edit, Details, Delete) -->
                    <div class="card-actions">
                        <button><a asp-action="Edit" asp-route-id="@item.Id">Edit</a></button>
                        <button><a asp-action="Details" asp-route-id="@item.Id">Details</a></button>
                        <button><a asp-action="Delete" asp-route-id="@item.Id">Delete</a></button>
                    </div>
                </div>
            </div>
        }
    </div>
</body>
